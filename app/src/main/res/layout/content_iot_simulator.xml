<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="sed.inf.u_szeged.hu.androidiotsimulator.activity.main.IoTSimulatorActivity"
    tools:showIn="@layout/activity_iot_simulator">

    <Button
        android:id="@+id/goto_cloud_settings_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_cloud_queue_black_24dp"
        android:drawablePadding="16dp"
        android:padding="20dp"
        android:text="@string/cloud_settings_btn"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <View
        android:id="@+id/tile_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />

    <Button
        android:id="@+id/goto_devices_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_devices_other_black_24dp"
        android:drawablePadding="16dp"
        android:padding="20dp"
        android:text="@string/devices_btn"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <View
        android:id="@+id/tile_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />

    <Button
        android:id="@+id/informations_btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_info_outline_black_24dp"
        android:drawablePadding="16dp"
        android:padding="20dp"
        android:text="@string/information_btn"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="22sp" />

    <View
        android:id="@+id/tile_divider3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/dividerVertical" />


</LinearLayout>
